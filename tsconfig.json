{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/factories/*"
      ]
    }
  }
}